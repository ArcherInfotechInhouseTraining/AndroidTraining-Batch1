<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signuppage"
    android:background="@drawable/signupbg"
    android:orientation="vertical"
    >
    
    <TextView
        android:id="@+id/maintext"
        android:layout_width="200sp"
        android:layout_height="110sp"
        android:hint="Create Account"
        android:textSize="30sp"
        android:textColorHint="@color/black"
        android:padding="20sp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/nametextsignup"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:hint="Name"
        android:textSize="30sp"
        android:layout_marginTop="100sp"
        android:layout_marginStart="20sp"

        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/namefield"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:background="@drawable/loginfield"
        android:hint="@string/enter_your_name"
        android:layout_marginStart="20sp"
        android:textSize="22sp"
        android:padding="10sp"

        android:textColorHint="@color/black"
        />
    <TextView
        android:id="@+id/emailtextsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="@string/email"
        android:textSize="30sp"
        android:layout_marginStart="20sp"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/emailtextfieldsignup"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:layout_marginStart="20sp"
        android:hint="Enter Your Email"
        android:background="@drawable/loginfield"
        android:textSize="22sp"
        android:padding="10sp"
        android:textColorHint="@color/black"
        />
    
    <TextView
        android:id="@+id/passtext"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:hint="Password"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:textSize="30sp"
        android:textColorHint="@color/black"
        />
    
    <EditText
        android:id="@+id/passtextfield"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:hint="******"
        android:background="@drawable/loginfield"
        android:layout_marginStart="20sp"
        android:textSize="22sp"
        android:padding="10sp"
        android:textColorHint="@color/black"
        />

    <TextView
        android:id="@+id/repasstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/repassword"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/repassfield"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:background="@drawable/loginfield"
        android:hint="******"
        android:textSize="22sp"
        android:padding="10sp"
        android:textColorHint="@color/black"
        android:layout_marginStart="20sp"
        />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:hint="@string/sign_up"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        android:backgroundTint="#46815F"
        />

</androidx.appcompat.widget.LinearLayoutCompat>