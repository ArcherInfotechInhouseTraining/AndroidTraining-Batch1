<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical"
    android:background="@drawable/login"
    >
    <TextView
        android:id="@+id/logintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hi,"
        android:textSize="30sp"
        android:textColorHint="@color/black"
        android:layout_marginTop="50sp"
        android:layout_marginStart="40sp"
        />
    <TextView
        android:id="@+id/logintext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please LogIn "
        android:textSize="30sp"
        android:textColorHint="@color/black"

        android:layout_marginStart="40sp"
        />

    <TextView
        android:id="@+id/emailtext"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:hint="Email"
        android:textSize="30sp"
        android:layout_marginTop="120sp"
        android:layout_marginStart="20sp"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/emailtextfield"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:padding="10sp"
        android:textSize="22sp"
        android:background="@drawable/loginfield"
        android:textColorHint="@color/black"
    />

    <TextView
        android:id="@+id/passtext"
        android:layout_width="140sp"
        android:layout_height="40sp"
        android:hint="Password"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/passwordtextfield"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:hint="******"
        android:background="@drawable/loginfield"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:padding="10sp"
        android:textSize="22sp"
        android:textColorHint="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/createacc"
            android:layout_width="260sp"
            android:layout_height="wrap_content"
            android:hint="if Don't Have an Account : "
            android:layout_marginTop="20sp"
            android:textSize="22sp"
            android:layout_marginStart="20sp"
            android:textColorHint="@color/black"
            />

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sign up"
            android:textSize="20sp"
            android:textColorHint="#306847"
            android:layout_marginTop="20sp"
            />

    </LinearLayout>
    



    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/facebook"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:hint="@string/facebook"
            android:background="@drawable/logofield"
            android:layout_marginTop="40sp"
            android:layout_marginStart="20sp"
            android:padding="10sp"
            android:textColorHint="#399B61"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/google"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:hint="@string/google"
            android:background="@drawable/logofield"
            android:layout_marginTop="40sp"
            android:layout_marginStart="40sp"
            android:padding="10sp"
            android:textColorHint="#399B61"
            android:textSize="22sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="140sp"
        android:layout_height="50sp"
        android:hint="LogIn"
        android:textColorHint="@color/white"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22sp"
        android:backgroundTint="#367852"
        />

</androidx.appcompat.widget.LinearLayoutCompat>