<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/welcomeback1"
    >

    <TextView
        android:id="@+id/text1"
        android:layout_marginTop="560sp"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="@string/welcome_to_uilover"
        android:textSize="30sp"
        android:layout_marginStart="10sp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_all_designs"
        android:textSize="20sp"
        android:padding="2sp"
        android:layout_marginStart="10sp"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/available_on_the_uilover"
        android:textSize="20sp"
        android:padding="2sp"
        android:layout_marginStart="10sp"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:padding="2sp"
        android:text="@string/channal_for_free"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:layout_width="200sp"
        android:textSize="20sp"
        android:layout_height="60sp"
        android:text="@string/get_started"
        android:padding="10sp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>