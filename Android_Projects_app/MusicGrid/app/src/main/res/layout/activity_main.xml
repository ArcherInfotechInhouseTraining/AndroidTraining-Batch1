<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_row="4"
    android:layout_column="3"
    android:background="#699CBC">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/guiter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:src="@drawable/fiddle"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <ImageView
        android:id="@+id/tabla"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:src="@drawable/tabla"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/flute"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_margin="10dp"
        android:src="@drawable/flute"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/piano"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:src="@drawable/piano"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/trumpet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:src="@drawable/trumpet"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/drum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_margin="10dp"
        android:src="@drawable/drum"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/rain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:src="@drawable/rain"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/dhol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:src="@drawable/india"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/veena"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_margin="10dp"
        android:src="@drawable/veena"
        android:layout_columnWeight="1"
        android:elevation="50dp"/>

</GridLayout>