<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"
    android:background="@drawable/homeback3">

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey,"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lets Search Your Grocery Food....."
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="20dp"/>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"/>
        
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">
            
            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/bakery"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/drink"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/food"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/fruitsalad"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/category"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/discount1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/discount2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/discount2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/populardetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/discount"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Details"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/popular"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/popular2"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/popular3"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>