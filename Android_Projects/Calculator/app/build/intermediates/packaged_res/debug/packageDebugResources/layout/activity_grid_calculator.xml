<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grid_calculator"
    android:gravity="center">
    
    <EditText
        android:id="@+id/ansedittext"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="0"
        android:textSize="20sp"
        android:textAlignment="viewEnd"
        android:paddingEnd="20dp"/>

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="4"
        android:layout_below="@+id/ansedittext">

<!--        Row 2-->
        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:text="AC"/>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:text="Reset"/>
        <Button
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:text="\u232B"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/onoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:text="0/1"/>


<!--        //Row Secound-->
        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_weight="1"
            android:backgroundTint="#FF862C"
            android:layout_margin="5dp"/>


<!--        //Row 3-->
        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_row="2"
            android:layout_column="3"
            android:backgroundTint="#FF862C"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

<!--        row 4-->
        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:text="7"/>

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:text="8"/>

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:text="9"/>

        <Button
            android:id="@+id/btmul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="3"
            android:backgroundTint="#FF862C"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:text="*"/>

<!--//Row 5-->
        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:text="0"/>

        <Button
            android:id="@+id/btdot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:text="."/>

        <Button
            android:id="@+id/btmod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="4"
            android:backgroundTint="#FF862C"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:text="%"/>
        <Button
            android:id="@+id/btdiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_row="4"
            android:backgroundTint="#FF862C"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:text="/"/>
    </GridLayout>

    <Button
        android:id="@+id/btans"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ans"
        android:backgroundTint="#0C8E42"
        android:textSize="20sp"
        android:layout_below="@+id/gridlayout"/>
</RelativeLayout>