<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/cardRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:src="@drawable/creditback1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="3dp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">
        
        <ImageView
            android:id="@+id/banklogo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/axisbanklogo"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/bankname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/axis_bank"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="right"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="35dp"/>

    </LinearLayout>

        <TextView
        android:id="@+id/cardnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credit_numer"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="155dp"
        android:layout_marginStart="40dp"
        />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="190dp">
        <TextView
            android:id="@+id/num"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:text="@string/_1234"
            android:layout_marginStart="45dp"
            android:textColor="@color/white"
            android:textSize="10sp"/>
        
        <TextView
            android:id="@+id/monthyear"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="@string/month_year"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/expire"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="@string/expires_end"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="207dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startdate"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="@string/_08_24"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="204dp"
            android:layout_marginStart="115dp"
            android:textSize="10sp"/>
        
        <TextView
            android:id="@+id/enddate"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="@string/_8_28"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="204dp"
            android:layout_marginStart="30dp"
            android:textSize="10sp"/>
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="235dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:text="@string/name_sirname"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/visa"
            android:layout_marginStart="110dp"/>

    </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="300dp">

            <EditText
                android:id="@+id/enterbankname"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="@string/enter_the_bank_name"
                android:layout_marginStart="55dp"
                android:padding="10dp"
                android:nextFocusForward="@id/entername"
                android:textColorHint="#2F8E2C2C"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/entername"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="@string/enter_card_holder_name"
                android:layout_marginStart="55dp"
                android:padding="10dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textColorHint="#2F8E2C2C"
                android:layout_marginTop="20dp"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:nextFocusForward="@id/entertype"/>

            <EditText
                android:id="@+id/entertype"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="@string/type_of_card"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#2F8E2C2C"
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:nextFocusForward="@id/entercarnumber"/>

            <EditText
                android:id="@+id/entercarnumber"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="@string/enter_the_card_number"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:inputType="number"
                android:textColorHint="#2F8E2C2C"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:maxLength="16"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/securitycode"/>



            <EditText
                android:id="@+id/securitycode"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:fontFamily="@font/roboto_bold"
                android:hint="@string/security_code"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#2F8E2C2C"
                android:padding="10dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusForward="@id/enterstart"/>

            <EditText
                android:id="@+id/enterstart"
                android:layout_width="300dp"

                android:fontFamily="@font/roboto_bold"
                android:layout_height="40dp"
                android:hint="@string/start_date"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#2F8E2C2C"
                android:padding="10dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextClusterForward="@id/enterexipirydate"/>

            <EditText
                android:id="@+id/enterexipirydate"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="@string/expiry_date"
                android:layout_marginStart="55dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="20dp"
                android:textColorHint="#2F8E2C2C"
                android:padding="10dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/proceed"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:hint="@string/proceed"
                android:textColorHint="@color/white"
                android:padding="15dp"
                android:backgroundTint="#8E2C2C"/>
        </LinearLayout>


</RelativeLayout>