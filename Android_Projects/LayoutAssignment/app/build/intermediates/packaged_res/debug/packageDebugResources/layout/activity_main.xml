<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


<!--    First LinearLayout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/purplecontainer"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="#C069EB"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/bluecontainer1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="#6E80E6"/>

        <TextView
            android:id="@+id/bluecontainer2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#6E80E6"/>

        <TextView
            android:id="@+id/bluecontainer3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#6E80E6"/>

    </LinearLayout>

<!--    //Secound linear Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pinkcontainer1"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="35dp"
            android:background="#B4698B"/>

        <TextView
            android:id="@+id/pinkcontainer2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="20dp"
            android:background="#B4698B" />
    </LinearLayout>

</LinearLayout>